}

enum ClientFileType {
    menu
    checklist
    diets
}

type ClientFileWeek {
    year Int
    week Int
}

model ClientFile {
    id String @id @default(cuid()) @map("_id")
    clientId String
    client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
    // dieticianId String
    // dietician Dietician @relation(fields: [dieticianId], references: [id])
    cateringId String
    catering Catering @relation(fields: [cateringId], references: [id])
    fileType ClientFileType
    s3Key String
    week ClientFileWeek
    fileName String
    
    editedById String?
    editedBy User? @relation(fields: [editedById], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Allergen {
    id String @id @default(cuid()) @map("_id")
    name String
    cateringId String
    catering Catering @relation(fields: [cateringId], references: [id])
    
    consumers ConsumerAllergen[]
    foods     FoodAllergen[]
    exclusions ExclusionAllergen[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model ConsumerAllergen {
    id String @id @default(cuid()) @map("_id")
    consumerId String
    consumer Consumer @relation(fields: [consumerId], references: [id], onDelete: Cascade)
    allergenId String
    allergen Allergen @relation(fields: [allergenId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([consumerId, allergenId])
}

model FoodCategory {
    id        String   @id @default(cuid()) @map("_id")
    name      String
    foods     Food[]
    cateringId String
    catering Catering @relation(fields: [cateringId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([name, cateringId])
}

model Food {
    id             String        @id @default(cuid()) @map("_id")
    name           String
    ingredients    String?
    foodCategoryId String?
    foodCategory   FoodCategory? @relation(fields: [foodCategoryId], references: [id], onDelete: SetNull, onUpdate: Cascade)
    allergens      FoodAllergen[]
    consumerFoods  ConsumerFood[] @relation("ConsumerFood")
    alternativeConsumerFoods ConsumerFood[] @relation("AlternativeConsumerFood")
    menuMealFoods  MenuMealFood[]
    cateringId String
    catering Catering @relation(fields: [cateringId], references: [id])
    createdAt      DateTime      @default(now())
    updatedAt      DateTime      @updatedAt
}

model FoodAllergen {
    id         String   @id @default(cuid()) @map("_id")
    foodId     String
    food       Food     @relation(fields: [foodId], references: [id], onDelete: Cascade)
    allergenId String
    allergen   Allergen @relation(fields: [allergenId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([foodId, allergenId])
}

model RegularMenu {
    id String @id @default(cuid()) @map("_id")
    day DeliveryDay
    cateringId String
    catering Catering @relation(fields: [cateringId], references: [id])
    clientId String?
    client Client? @relation(fields: [clientId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    consumerFoods ConsumerFood[]
    menuMealFoods MenuMealFood[]

    @@unique([day.year, day.month, day.day, clientId, cateringId])
}

model MenuMealFood {
    id String @id @default(cuid()) @map("_id")
    regularMenuId String
    regularMenu RegularMenu @relation(fields: [regularMenuId], references: [id], onDelete: Cascade)
    mealId String
    meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)
    foodId String
    food Food @relation(fields: [foodId], references: [id], onDelete: Cascade)
    order Int?
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
    @@unique([regularMenuId, mealId, foodId])
}

